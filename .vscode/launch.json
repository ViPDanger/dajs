    "version": "0.2.0",
    "configurations": [
        {
            "name": "Server",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/go-api/cmd/main.go"
        },
        {
            "name": "Tests",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${workspaceFolder}/go-api/internal/app/app_test.go"
        },
        { 
                "name": "Telegram-Bot",
                "type": "python",
                "request": "launch",
                "mode": "debug",
                "program": "${workspaceFolder}/telegram-bot/main.py",
                "console": "integratedTerminal"
        },
         { 
                "name": "Web App",
                "type": "go",
                "request": "launch",
                "mode": "debug",
                "program": "${workspaceFolder}/webapp/main.go",
        }
    ],
  "compounds": [
    {
      "name": "Bot+Server",
      "configurations": ["Telegram-Bot", "Server"],
      "stopAll": true
    }
  ]

}